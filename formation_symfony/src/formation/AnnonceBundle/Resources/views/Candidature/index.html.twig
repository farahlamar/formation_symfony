{% extends 'formationAnnonceBundle::Layout.html.twig' %}
{% block titre %} {{ parent()}}Liste des candidatures {% endblock %}
{% block content %}
    <h1>Condidature list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('candidature_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.contenu }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('candidature_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('candidature_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('candidature_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
